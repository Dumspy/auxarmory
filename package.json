{
  "name": "auxarmory",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e --filter=@auxarmory/e2e",
    "test:watch": "turbo run test:watch",
    "format": "oxfmt --check",
    "format:fix": "oxfmt .",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "ui:add": "pnpm dlx shadcn@latest add --cwd packages/ui",
    "prepare": "husky"
  },
  "devDependencies": {
    "@auxarmory/typescript-config": "workspace:*",
    "husky": "^9.1.7",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "turbo": "^2.8.10",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=22.14.0"
  }
}
