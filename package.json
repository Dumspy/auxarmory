{
  "name": "auxarmory",
  "private": true,
  "license": "Elastic-2.0",
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "db:studio": "pnpm --filter @auxarmory/db db:studio",
    "db:studio:test": "pnpm --filter @auxarmory/db db:studio:test",
    "db:reset": "pnpm --filter @auxarmory/db db:reset",
    "db:reset:test": "pnpm --filter @auxarmory/db db:reset:test",
    "db:reset:all": "pnpm db:reset && pnpm db:reset:test",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e --filter=@auxarmory/e2e",
    "test:watch": "turbo run test:watch",
    "format": "oxfmt --check",
    "format:fix": "oxfmt .",
    "lint": "oxlint . && pnpm lint:node-entrypoints",
    "lint:fix": "oxlint --fix . && pnpm lint:node-entrypoints",
    "lint:node-entrypoints": "pnpm --filter @auxarmory/auth-service exec tsc --project tsconfig.json --noEmit && pnpm --filter @auxarmory/api-service exec tsc --project tsconfig.json --noEmit",
    "ui:add": "pnpm dlx shadcn@latest add --cwd packages/ui",
    "prepare": "husky"
  },
  "devDependencies": {
    "@auxarmory/typescript-config": "workspace:*",
    "husky": "^9.1.7",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "turbo": "^2.8.10",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=22.14.0"
  }
}
