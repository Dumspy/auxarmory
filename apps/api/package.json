    "start": "node --import ./instrument.mjs dist/index.js",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --passWithNoTests"
  },
  "dependencies": {
    "@auxarmory/api": "workspace:*",
    "@auxarmory/observability": "workspace:*",
    "@hono/node-server": "^1.19.0",
    "@sentry/node": "^10.40.0",
    "@t3-oss/env-core": "catalog:",
    "@trpc/server": "^11.7.2",
    "hono": "^4.9.8",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@auxarmory/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "tsx": "^4.21.0",
    "typescript": "catalog:",
    "vitest": "^3.2.4"
  }
}
