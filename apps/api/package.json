{
  "name": "@auxarmory/api-service",
  "private": true,
  "license": "Elastic-2.0",
  "type": "module",
  "exports": {
    ".": {
      "default": "./src/index.ts"
    },
    "./app": {
      "default": "./src/app.ts"
    }
  },
  "scripts": {
    "dev": "SENTRY_DSN=\"${API_SENTRY_DSN:-$SENTRY_DSN}\" NODE_OPTIONS='--import ./instrument.mjs --conditions=development' tsx watch src/index.ts",
