{
  "name": "@auxarmory/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "Elastic-2.0",
  "scripts": {
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "build": "tsc",
    "db:generate": "pnpm --dir ../.. exec drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "pnpm --dir ../.. exec drizzle-kit migrate --config drizzle.config.ts",
    "db:migrate:test": "DATABASE_URL=${DATABASE_URL_TEST:-$DATABASE_URL} pnpm --dir ../.. exec drizzle-kit migrate --config drizzle.config.ts",
    "db:studio": "pnpm --dir ../.. exec drizzle-kit studio --config drizzle.config.ts",
    "db:studio:test": "DATABASE_URL=${DATABASE_URL_TEST:-$DATABASE_URL} pnpm --dir ../.. exec drizzle-kit studio --config drizzle.config.ts",
    "db:reset": "node ./src/reset-db.mjs && pnpm --dir ../.. exec drizzle-kit push --force --config drizzle.config.ts",
    "db:reset:test": "DATABASE_URL=${DATABASE_URL_TEST:-$DATABASE_URL} node ./src/reset-db.mjs && DATABASE_URL=${DATABASE_URL_TEST:-$DATABASE_URL} pnpm --dir ../.. exec drizzle-kit push --force --config drizzle.config.ts",
    "db:sync": "pnpm --dir ../.. exec drizzle-kit push --config drizzle.config.ts",
    "db:sync:test": "DATABASE_URL=${DATABASE_URL_TEST:-$DATABASE_URL} pnpm --dir ../.. exec drizzle-kit push --config drizzle.config.ts",
    "db:push": "pnpm --dir ../.. exec drizzle-kit push --config drizzle.config.ts"
  },
  "dependencies": {
    "@t3-oss/env-core": "catalog:",
    "drizzle-orm": "^0.44.4",
    "pg": "^8.16.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@auxarmory/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "@types/pg": "^8.11.6",
    "drizzle-kit": "^0.31.4",
    "typescript": "catalog:"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "development": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./src/client.ts",
      "development": "./src/client.ts",
      "default": "./dist/client.js"
    },
    "./schema": {
      "types": "./src/schema.ts",
      "development": "./src/schema.ts",
      "default": "./dist/schema.js"
    }
  }
}
