generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

model Account {
    id              Int       @id @unique
    battletag       String    @unique
    bnetAccessToken String
    bnetExpiresAt   DateTime
    lastSync        DateTime?

    characters Character[]
}

model Realm {
    id     Int        @id
    name   String
    slug   String
    region RegionEnum

    guilds Guild[]

    characters Character[]
}

model Guild {
    id          Int    @id
    name        String
    slug        String
    memberCount Int @default(0)

    realm   Realm @relation(fields: [realmId], references: [id])
    realmId Int

    members GuildMember[]
}

model Character {
    id                Int      @id
    name              String
    gender            String
    level             Int
    averageItemLevel  Int
    equippedItemLevel Int
    lastLogin         DateTime
    avatarUrl         String?
    favorite          Boolean  @default(false)
    activeSpec        String?
    mythicRating      Float?   @default(0)
    mythicRatingColor String?  @default("0,0,0,0")

    faction FactionEnum

    race   Race @relation(fields: [raceId], references: [id])
    raceId Int

    class   Class @relation(fields: [classId], references: [id])
    classId Int

    realm   Realm @relation(fields: [realmId], references: [id])
    realmId Int

    guild GuildMember?

    account   Account @relation(fields: [accountId], references: [id])
    accountId Int
}

model GuildMember {
    character Character @relation(fields: [characterId], references: [id])
    characterId Int @unique @id

	guild Guild @relation(fields: [guildId], references: [id])
	guildId Int

	isMain Boolean @default(false)
}

model Class {
    id   Int    @id @unique
    name String

    Character Character[]
}

model Race {
    id   Int    @id @unique
    name String

    characters Character[]
}

enum RegionEnum {
    us
    eu
    kr
    tw
    cn
}

enum FactionEnum {
    ALLIANCE
    HORDE
    NEUTRAL
}
